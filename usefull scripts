merge python script

#!/bin/bash

# Define the output file
OUTPUT_FILE="merged_src.py"

# Find all Python files in the 'src/' directory excluding empty __init__.py
PY_FILES=$(find src -type f -name "*.py" | grep -v "__init__.py" | sort)

# Create or clear the output file
> $OUTPUT_FILE

# Function to add file content to the output file
add_file_content() {
    local file=$1
    echo -e "\n# File: $file\n" >> $OUTPUT_FILE
    cat "$file" >> $OUTPUT_FILE
}

# Loop through each Python file and add its content to the output file
for file in $PY_FILES; do
    add_file_content "$file"
done

# Handle __init__.py files separately if they have significant content
INIT_FILES=$(find src -type f -name "__init__.py" | sort)

for init_file in $INIT_FILES; do
    if [ -s "$init_file" ]; then
        add_file_content "$init_file"
    fi
done

echo "All Python files in the 'src/' directory have been merged into $OUTPUT_FILE."
